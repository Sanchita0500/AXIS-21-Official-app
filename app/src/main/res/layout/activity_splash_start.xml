<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/stars_2"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    tools:context="axis.axis21.sanchita.axisapp.SplashStart">

    <TextView
        android:id="@+id/main_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="A MULTIVERSE EXPEDITION"
        android:textColor="@android:color/background_light"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/presents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway"
        android:padding="15dp"
        android:text="Let's begin the Expedition..."
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

