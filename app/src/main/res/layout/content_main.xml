<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

<!--            <LinearLayout-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_width="300dp"-->
<!--                android:layout_height="350dp"-->
<!--                android:orientation="vertical"-->
<!--                >-->

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_margin="2dp"
                    android:layout_width="300dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:id="@+id/promo_image"
                    />

<!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:text="ABOUT AXIS"
                android:letterSpacing="0.2"
                android:padding="14dp"
                />


            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:layout_marginLeft="15dp"
                android:text="@string/axis_about"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/colorText"
                />

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:text="30+"
                        />

                    <TextView
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="170+"
                        />

                    <TextView
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:text="Colleges"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:text="35K+"
                        />

                    <TextView
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Participants"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:letterSpacing="0.2"
                android:text="CONNECT WITH US"
                android:padding="14dp"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <LinearLayout
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageButton
                        android:onClick="openSocial"
                        android:id="@+id/btn_fb"
                        android:scaleType="fitXY"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circular_button"
                        android:src="@drawable/fcb"
                        />

                </LinearLayout>

                <LinearLayout
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:onClick="openSocial"
                        android:id="@+id/btn_insta"
                        android:scaleType="fitXY"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circular_button"
                        android:src="@drawable/instagram_f"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:onClick="openSocial"
                        android:id="@+id/btn_linkedin"
                        android:scaleType="fitXY"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:riv_corner_radius="50dp"
                        android:background="@drawable/circular_button"
                        android:src="@drawable/linkedin" />

                </LinearLayout>

                <LinearLayout
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:onClick="openSocial"
                        android:id="@+id/btn_web"
                        android:scaleType="fitXY"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:riv_corner_radius="50dp"
                        android:elevation="2dp"
                        android:background="@drawable/circular_button"
                        android:src="@drawable/twitter" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="OUR FEED"
                android:letterSpacing="0.2"
                android:padding="14dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:id="@+id/main_feed"
                >


            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>